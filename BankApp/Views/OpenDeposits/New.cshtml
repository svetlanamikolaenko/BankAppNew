@model BankApp.ViewModels.OpenDepositFormViewModel
@{
    ViewBag.Title = "Deposit Opening";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Deposit Opening</h2>

@using (Html.BeginForm("Save", "OpenDeposits"))
{
    @Html.ValidationSummary(true, "Please, fill in the following required fields.")
    <div class="form-group">
        <label>Name</label>
        @Html.DropDownListFor(o => o.OpenDeposit.DepositId, new SelectList(Model.Deposit, "Id", "Name"), "Select Name", new { @class = "form-control" })
        @Html.ValidationMessageFor(o => o.OpenDeposit.DepositId)
    </div>
    <div class="form-group">
        <label>Period</label>
        @Html.DropDownListFor(o => o.OpenDeposit.DepositId, new SelectList(Model.Deposit, "Id", "Period"), "Select Period", new { @class = "form-control" })
        @Html.ValidationMessageFor(o => o.OpenDeposit.DepositId)
    </div>
    <div class="form-group">
        <label>Procent</label>
        @Html.DropDownListFor(o => o.OpenDeposit.DepositId, new SelectList(Model.Deposit, "Id", "Procent"), "Select Procent", new { @class = "form-control" })
        @Html.ValidationMessageFor(o => o.OpenDeposit.DepositId)
    </div>
    <div class="form-group">
        <label>Client</label>
        @Html.DropDownListFor(o => o.OpenDeposit.ClientId, new SelectList(Model.Client, "Id", "FullName"), "Select Client", new { @class = "form-control" })
        @Html.ValidationMessageFor(o => o.OpenDeposit.ClientId)
    </div>
    <div class="form-group">
        <label>Amount</label>
        @Html.TextBoxFor(o => o.OpenDeposit.Amount, new { @class = "form-control" })
        @Html.ValidationMessageFor(o => o.OpenDeposit.Amount)
    </div>
    @Html.HiddenFor(o => o.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
