@model IEnumerable<BankApp.Models.OpenDeposit>
@{
    ViewBag.Title = "Opened Deposits";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Opened Deposits</h2>
<a class="btn btn-primary" href="/OpenDeposits/New" role="button">Open Deposit</a>
<br>
<br>
<table id="openDeposits" class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Deposit</th>
        <th>Period</th>
        <th>Procent</th>
        <th>Amount</th>
        <th>Client</th>
    </tr>
    </thead>
    <tbody></tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#openDeposits").DataTable({
                ajax: {
                    url: "/api/openDeposits",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "deposit.name"
                    },
                    {
                        data: "deposit.period"
                    },
                    {
                        data: "deposit.procent"
                    },
                    {
                        data: "amount"
                    },
                    {
                        data: "client.fullName"
                    }
                ]
            });
        });
    </script>
}